
@model KullaniciGiris

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <form  method="post"  asp-action="GirisYap" asp-controller="Kullanici">

                        <div class="mb-md-5 mt-md-4 pb-5">

                            <h2 class="fw-bold mb-2 text-uppercase">Giriş Yap</h2>
                            <p class="text-white-50 mb-5">Lütfen Kullanıcı Adı ve Şifrenizi Giriniz</p>

                            <div class="form-outline form-white mb-4">
                                <input type="email" asp-for="KullaniciAd" class="form-control form-control-lg" />
                                <label class="form-label" for="typeEmailX">Kullanıcı Adı</label>
                                <span style="color:red" asp-validation-for="KullaniciAd"></span>
                            </div>

                            <div class="form-outline form-white mb-4">
                                <input type="password" asp-for="Sifre" class="form-control form-control-lg" />
                                <label class="form-label" for="typePasswordX">Şifre</label>
                                <span style="color:red" asp-validation-for="Sifre"></span><br />
                                    <span style="color:red">@ViewData["GirisYapKullaniciSifreHatasi"]</span><br />
                            </div>

                            <p class="small mb-5 pb-lg-2"><a class="text-white-50" href="#!">Forgot password?</a></p>

                            <button class="btn btn-outline-light btn-lg px-5" type="submit">Login</button>

                            

                        </div>

                        <div>
                            <p class="mb-0">
                                Don't have an account? <a href="UyeOl" class="text-white-50 fw-bold">Sign Up</a>
                            </p>
                        </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>